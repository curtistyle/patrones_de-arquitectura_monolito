<table class="table table-hover">
    <thead class="table-primary">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">NAME</th>
            <th scope="col">DESCRIPTION</th>
            <th scope="col">PRICE</th>
            <th class="col-lg-2 text-center" scope="col">ACTIONS</th>
        </tr>
    </thead>
    <tbody class="table-active">
        {{#each products}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>Buen jabon</td>
                <td>$ {{price}}</td>
                <td>
                    <div class="d-flex justify-content-between">
                        <form action="/products/delete/{{id}}" method="POST" class="d-flex " style="margin: 0px !important;">
                            <button type="submit" class="btn btn-danger ">Eliminar</button>
                        </form>
                        <form action="/products/details/{{id}}" method="GET" class="d-flex " style="margin: 0px !important;">
                            <button type="submit" class="btn btn-info ">Info</button>
                        </form>
                    </div>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<a href="/">Volver</a>
</div>
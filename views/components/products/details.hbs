{{!< layouts/mainLayout }}




<div class="d-flex flex-column m-0 h-100 align-items-center justify-content-center">
    {{#if message}}
    <div style="padding-top: 50px;"> </div>
        <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <span><strong>{{ message.title }}</strong>, the product <strong>{{ message.entity }}</strong>, {{ message.subtitle }}</span>
    </div>
    {{/if}}


    <form class="row d-flex w-100 justify-content-center" method="POST" action="/products/update/{{ product.id }}">
        <div class="card w-50 p-3" id="card-details">
            <div class="d-flex justify-content-between align-items-center">
                <span id="title" class="display-6">Details</span>   
                <div>
                    <button id="switchButton" type="button" class="btn btn-warning">Edit</button>
                </div> 
            </div>

            <div class="pt-3">
                <fieldset disabled="disabled">
                    <label class="form-label" for="product">Product</label>
                    <input class="form-control" id="product" type="text"  value="{{ product.name }}" placeholder="Product name here..."  required/>
                </fieldset>
            </div>

            <div class="pt-3">
                <fieldset disabled="disabled">
                    <label class="form-label" for="description">Description</label>
                    <input class="form-control" id="description" type="text" value="{{ product.description }}" placeholder="Description here..."  required/>
                </fieldset>
            </div>

            <div class="pt-3">
                <fieldset disabled="disabled">
                    <label class="form-label" for="bar-code">Bar Code:</label>
                    <input class="form-control" id="bar-code" type="text" value="{{ product.bar_code }}" placeholder="Bar code here..."  required/>
                </fieldset>
            </div>

            <div class="d-flex flex-row justify-content-between mt-3">
                <div class="d-flex align-content-between flex-wrap">
                    <fieldset class="w-100">
                        <div>
                            <label for="category" class="form-label">Category: </label>
                            <select class="form-select" id="category">
                                <option>1</option>
                            </select>
                        </div>
                    </fieldset>

                    <fieldset class="w-50" disabled="disabled">
                        <label class="form-label">Price: </label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" value="{{ product.price }}" aria-label="Amount (to the nearest dollar)" placeholder="Price here...">
                            <span class="input-group-text">.00</span>
                        </div>
                    </fieldset>
                </div>
                <div class="card p-1 col-4" style="height: 180px;">
                    <img class="" src="https://cdn.pixabay.com/photo/2024/05/28/12/28/ship-8793759_960_720.jpg" width="100%" height="100%" alt=""/>
                    
                    <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <img class="position-absolute start-0 bottom-0 mb-2 mx-2" src="/img/upload-solid.svg" alt="" width="30">
                        <input type="text" value="" id="img-link" hidden />
                    </a>
                    
                </div>
            </div>
            

            <div class="pt-3 d-flex flex-row-reverse ">
                <button type="submit" class="btn btn-outline-success disabled" id="btn-save-change">Save Change</button>
            </div>
        </div>
    </form>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="modal-body">
            <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const switchButton = document.getElementById("switchButton");
        const title = document.getElementById("title");
        const card_details = document.getElementById("card-details");
        const btn_save_change = document.getElementById("btn-save-change");

        const fieldset = document.querySelectorAll("fieldset");

        switchButton.addEventListener("click", (ev) =>{
            if (title.innerText === "Details"){
                editMode();
            } else {
                detailsMode();
            }
        })

        function editMode(){
            title.innerText = "Edit Product";
            title.classList.add("text-warning");
            card_details.classList.add("border-warning");
            
            fieldset.forEach((value) => value.removeAttribute("disabled"));
            btn_save_change.classList.remove("disabled")
        }

        function detailsMode(){
            title.innerText = "Details";
            title.classList.remove("text-warning");
            card_details.classList.remove("border-warning");

            fieldset.forEach((value) => value.setAttribute("disabled", "disabled"));
            btn_save_change.classList.add("disabled");
        }
    });

</script>
